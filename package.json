{
  "name": "backend-fastify",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@types/cookie-parser": "^1.4.2",
    "apollo-server-express": "^2.12.0",
    "bcrypt": "^5.0.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql-middleware": "^4.0.2",
    "graphql-shield": "^7.2.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "nodemailer": "^6.4.6",
    "pg": "^8.0.2",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.13.2",
    "@graphql-codegen/typescript": "1.13.2",
    "@graphql-codegen/typescript-resolvers": "1.13.2",
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.11.1",
    "@types/nodemailer": "^6.4.0",
    "@types/pg": "^7.14.3",
    "concurrently": "^5.1.0",
    "copyfiles": "^2.2.0",
    "nodemon": "^2.0.3",
    "rimraf": "^3.0.2",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "develop": "concurrently \"yarn dev\" \"yarn codegen:watch\"",
    "dev": "nodemon -r dotenv/config src/server.ts",
    "debug": "nodemon --inspect src/server.ts",
    "build:clean": "rimraf build/",
    "build": "yarn build:clean && tsc && copyfiles -u 1 src/**/*.schema.graphql build/",
    "postbuild": "cp src/schema.graphql build/",
    "start": "node build/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "migration:create": "ts-node src/db/create",
    "migration:run": "ts-node -r dotenv/config src/db/run.ts",
    "codegen": "graphql-codegen --config codegen.yml",
    "codegen:watch": "yarn codegen --watch"
  }
}
